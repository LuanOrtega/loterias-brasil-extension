{
  "manifest_version": 3,
  "name": "Loterias Brasil - Consulta Inteligente",
  "version": "1.0",
  "description": "Consulta resultados da Mega-Sena, Quina e Lotofácil pelo número do concurso.",

  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png",
    "512": "icons/icon_512.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png"
    }
  },

  "permissions": ["storage"],
  "host_permissions": ["https://loteriascaixa-api.herokuapp.com/*"],

  "author": "Luan Ortega",
  "homepage_url": "https://github.com/LuanOrtega/loterias-brasil-extension"
}
